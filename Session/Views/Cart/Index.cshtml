@model List<CartItems>

    <h2>Shopping Cart</h2>
    

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>
                            @Html.ActionLink("RemoveAll", "RemoveAllFromCart", new { id = item.Id }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Add", "AddToCart", new { id = item.Id }, new { @class = "btn btn-success" })
    
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    
